<div>
    <h2>Add New Product</h2>

    <form id="addProduct" onsubmit="submitProduct(event)">
        <div class="row">
            <div class="form-group col-4">
                <label for="title">Title</label>
                <input class="form-control" name="title" id="title" type="text">
            </div>
            <div class="form-group col-4">
                <label for="price">Price</label>
                <input class="form-control" name="price" id="price" type="number">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="thumbnail">Thumbnail URL</label>
                <input class="form-control" name="thumbnail" id="thumbnail" type="text">
            </div>
        </div>
        <button class="btn btn-success" type="submit" id="btnSubmit">
            Add Record
        </button>
    </form>
</div>