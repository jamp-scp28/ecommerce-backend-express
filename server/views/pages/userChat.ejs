<!DOCTYPE html>
<html lang="en">
<head>
    <title>Ecommerce</title>
    <link rel="stylesheet" href="../../public/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="container">
        <nav>
            <div>
                <h2>Jamp Ecommerce</h2>
            </div>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Service chat</a>
            </div>
        </nav>
        
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
               <div class="mt-5">
                    
                    <h2 style="margin-top: 20px;">User Messages</h2>
                    <div class="mt-5">
                        <div id="messages">
                            <% messages.forEach((message)=> { %>
                                <strong style="color:blue"><%= message.email %></strong><span style="color:#804000"> <%= message.timestamp%> </span><span style="font-style:italic;color:green;"><%= message.message %></span><br>
                            <% }); %>
                        </div>
                    </div>

                </div> 
            </div>
                
        </div> 

        <script type="text/javascript">

            function displayMessages(data){
                const messages = data.map((data,index)=>{
                    return(
                        `
                            <strong style="color:blue">${data.email}</strong><span style="color:$804000"> [${data.timestamp}]: </span><span style="font-style:italic;color:green;">${data.message}</span><br>
                        `
                    )
                }).join(" ");
                document.getElementById('messages').innerHTML = messages;
            }

        </script>
        <%- include('../components/footer'); %>
    </div>

</body>
</html>